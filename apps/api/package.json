{
  "name": "@landscape-architect/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/src/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration --passWithNoTests",
    "test:contract": "vitest run --project contract",
    "test:coverage-check": "vitest run --project unit --coverage",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@landscape-architect/shared": "workspace:*",
    "fastify": "^5.2.0",
    "@fastify/cors": "^11.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0"
  }
}
