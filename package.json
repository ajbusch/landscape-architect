{
  "name": "landscape-architect",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "test": "turbo test:unit test:contract",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:contract": "turbo test:contract",
    "test:e2e": "turbo test:e2e",
    "test:coverage-check": "turbo test:coverage-check",
    "clean": "turbo clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:secrets": "secretlint \"**/*\"",
    "test:smoke": "pnpm --filter @landscape-architect/api exec tsx scripts/test-analysis.ts"
  },
  "pnpm": {
    "overrides": {
      "fast-xml-parser": ">=5.3.6"
    }
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.1",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "github:eslint-community/eslint-plugin-security#7f9ee7767774",
    "prettier": "^3.8.1",
    "secretlint": "^11.3.1",
    "turbo": "^2.8.9",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0"
  }
}
